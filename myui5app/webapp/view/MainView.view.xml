<mvc:View
    controllerName="myui5app.controller.MainView"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns:tnt="sap.tnt"
    displayBlock="true"
    xmlns="sap.m"
>
    <Page
        id="page"
        class=""
    >
        <customHeader>
            <Toolbar class="content-header">
                <ToolbarSpacer />
                <!-- <Image
                    class="sapUiLargeMarginTop sapUiLargeMarginBottom image-logo"
                    src="assets/img/logo_steam.svg"
                    description="Logo"
                    press="press"
                /> -->
                <ImageContent
                    src="assets/img/logo_steam.svg"
                    class="image-logo"
                />
                <Button
                    text="{i18n>tienda}"
                    type="Emphasized"
                >
                    <layoutData>
                        <OverflowToolbarLayoutData priority="NeverOverflow" />
                    </layoutData>
                </Button>
                <!-- <Title
                    text="{i18n>tienda}"
                    level="H1"
                    class="header-text"
                /> -->
                <Button
                    text="{i18n>comunidad}"
                    type="Transparent"
                    press="onRouteComunidad"
                />
                <!-- <Title
                    text="{i18n>comunidad}"
                    level="H1"
                    class="header-text"
                /> -->
                <Button
                    text="{i18n>acerca}"
                    type="Transparent"
                    press="onRouteAcerca"
                />
                <Button
                    text="{i18n>soporte}"
                    type="Transparent"
                />

                <!-- <Title
                    text="{i18n>acerca}"
                    level="H1"
                    class="header-text"
                />
                <Title
                    text="{i18n>soporte}"
                    level="H1"
                    class="header-text"
                /> -->
                <ToolbarSpacer />
            </Toolbar>
        </customHeader>
        <subHeader>
            <OverflowToolbar class="content-subheader">
                <Button
                    text="{i18n>instalar}"
                    press="onInstalar"
                    class="btnInstalar"
                    ariaHasPopup="Dialog"
                />

                <Link
                    ariaHasPopup="Dialog"
                    text="{i18n>login}"
                    press="onLogin"
                    class="link-text"
                />

                <Link
                    ariaHasPopup="Dialog"
                    text="{i18n>registrarse}"
                    press="onRegistrar"
                    class="link-text"
                />
            </OverflowToolbar>
        </subHeader>

        <content>
            <tnt:ToolHeader
                id="shellLikeToolHeaderOnlyMandatoryControls"
                class="sapUiTinyMargin sapUiLargeMarginTop"
            >
                <Image
                    src="test-resources/sap/tnt/images/SAP_Logo.png"
                    decorative="false"
                    press="onLogoPressed"
                    tooltip="SAP Logo"
                >
                    <layoutData>
                        <OverflowToolbarLayoutData priority="NeverOverflow" />
                    </layoutData>
                </Image>
                <Title
                    text="PrÐ¾duct Name"
                    wrapping="false"
                >
                    <layoutData>
                        <OverflowToolbarLayoutData priority="Disappear" />
                    </layoutData>
                </Title>
                <ToolbarSpacer />
                <Avatar
                    src="test-resources/sap/tnt/images/Woman_avatar_01.png"
                    displaySize="XS"
                    press=".onAvatarPressed"
                    tooltip="Profile"
                >
                    <layoutData>
                        <OverflowToolbarLayoutData priority="NeverOverflow" />
                    </layoutData>
                </Avatar>
            </tnt:ToolHeader>

            <!-- <HBox class="nav-front">
                <VBox class="sapUiSmallMargin">
                    <Button
                        id="button"
                        text="Open Menu"
                        press="onPress"
                        ariaHasPopup="Menu"
                    />
                </VBox>
            </HBox> -->

            <HBox>
                <List
                    items="{
                        path: 'pictureModel>/'
                    }"
                >
                    <items>
                        <ObjectListItem title="{pictureModel>download_url}" />
                    </items>
                </List>
            </HBox>
            <!-- items="{pictureModel>/}" class="content_carousel" -->
            <HBox>
                <!-- <Text text="{pictureModel>author}" /> -->

                <Carousel
                    ariaLabelledBy="carouselTitle"
                    class="sapUiContentPadding"
                    loop="true"
                    pages="{pictureModel>/}"
                >
                    <Image
                        class="carousel-image"
                        src="{pictureModel>download_url}"
                        alt="{pictureModel>author}"
                    />

                    <Image
                        class="carousel-image"
                        src="{pictureModel>download_url}"
                        alt="{pictureModel>author}"
                    />
                    <!-- <Image
                    src="{img>/products/pic2}"
                    alt="Example picture of USB flash drive"
                />
                <Image
                    src="{img>/products/pic3}"
                    alt="Example picture of spotlight"
                />
                <Image
                    src="{img>/products/screw}"
                    alt="Example picture of screw"
                /> -->
                </Carousel>
            </HBox>
        </content>
    </Page>
</mvc:View>
