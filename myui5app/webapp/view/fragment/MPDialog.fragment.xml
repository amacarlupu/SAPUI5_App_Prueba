<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="mainDialog"
        title="Iniciar Sesion"
    >
        <content>
            <VBox
                class="sapUiSmallMargin"
                id="formContainer"
            >
                <f:SimpleForm
                    id="SimpleFormChangeColumn_twoGroups234"
                    editable="true"
                    layout="ColumnLayout"
                    title="Datos de la cuenta"
                    columnsM="2"
                    columnsL="2"
                    columnsXL="2"
                >
                    <f:content>
                        <core:Title text="Information" />
                        <Label text="Correo Electrónico" />
                        <Input
                            value="{
							path : 'email',
							type : 'sap.ui.model.type.String',
							constraints: {
								search: '^\\w+[\\w-+\\.]*\\@[a-zA-Z]+.[a-zA-Z]+'
								}
							}"
                        />
                        <Label text="Direccion" />
                        <Input value="{street/name}" />
                        <Input value="{street/number}">
                            <layoutData>
                                <f:ColumnElementData
                                    cellsSmall="2"
                                    cellsLarge="2"
                                />
                            </layoutData>
                        </Input>
                     
                        <Label text="País" />
                        <Select
                            id="country"
                            selectedKey="{country}"
                        >
                            <items>
                                <core:Item
                                    text="England"
                                    key="England"
                                />
                                <core:Item
                                    text="Germany"
                                    key="Germany"
                                />
                                <core:Item
                                    text="USA"
                                    key="USA"
                                />
                            </items>
                        </Select>
                        <core:Title text="Contact" />
                        <Label text="Volver a ingresar el correo electrónico" />
                        <Input
                            value="{
							path : 'email',
							type : 'sap.ui.model.type.String',
							constraints: {
								search: '^\\w+[\\w-+\\.]*\\@[a-zA-Z]+.[a-zA-Z]+'
								}
							}"
                        />
                        <Label text="Numero de celular" />
                        <Input value="{phone/number}" />
                        <Input value="{phone/time}">
                            <layoutData>
                                <f:ColumnElementData
                                    cellsSmall="2"
                                    cellsLarge="2"
                                />
                            </layoutData>
                        </Input>
                        <Label text="Personal website" />
                        <Input value="{website}" />
                    </f:content>
                </f:SimpleForm>
            </VBox>
